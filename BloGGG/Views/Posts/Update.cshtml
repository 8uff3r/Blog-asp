@model PostModel
@{
    Model.PostTagsString = string.Join(",", Model.PostTags);
}
<form hx-post="/posts/update/@Model.ID">
    <h2>Editing the Post</h2>
    <br/>
    <br/>
    <label>Post Title</label>
    <input type="text" value="@Model.PostTitle" name="PostTitle"/>
    <br/>
    <br/>
    <label>Post Tags</label>
    <input type="text" value="@Model.PostTagsString" name="PostTagsString"/>
    <br/>
    <br/>
    <textarea rows = "20"
            cols = "130%" name="PostBody">@Model.PostBody</textarea>

    <input type="submit" class="btn bg-info" value="Update Post">
</form>
