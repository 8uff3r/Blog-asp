@model PostModel
@{
    Model.PostTagsString = string.Join(",", Model.PostTags);
}
<h2>Add a Post</h2>


@using (var _ = Html.BeginForm("Update", "Posts", FormMethod.Post))
{
    <div>
        @Html.LabelFor(m => m.PostTitle)
        @Html.TextBoxFor(m => m.PostTitle, new
        {
            value = Model.PostTitle
        })
    </div>
    <br/>
    <div>
        @Html.LabelFor(m => m.PostTagsString)
        @Html.TextBoxFor(m => m.PostTagsString, new
        {
            value = Model.PostTagsString
        })
    </div>
    <br/>
    <div>
        @Html.TextAreaFor(m => m.PostBody, new
        {
            rows = 20,
            cols = "130%",
            value = Model.PostBody
        })
    </div>
    <input type="submit" class="btn bg-info" value="Update Post">
}