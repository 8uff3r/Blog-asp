}
<div id="p-@Model.ID" style="background-color: #2c3034" class="rounded-3 p-4">


    @foreach (string tag in Model.PostTags)
    {
        <a href="#">@tag</a>
    }
    <div style="display: flex;">
        @if (isAthed)
        {
            <button class="btn" hx-post=@($"/posts/rm/{Model.ID}") hx-target="#posts" style="display: inline;margin-right: 9px;color: white">ðŸ—¶</button>
